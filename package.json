{
    "name": "marked-plantuml",
    "version": "0.0.1",
    "description": "An enhanced marked version, supporting PlantUML directly in Markdown",
    "main": "index.js",
    "scripts": {
        "docker": "docker run --rm -ti -w /src -v $(pwd):/src node:10 bash",
        "build-dev": "NODE_ENV=development webpack --env=development -d",
        "build": "NODE_ENV=production webpack --env=production -p",
        "test": "npm test"
    },
    "author": "Alexander Schenkel",
    "license": "MIT",
    "dependencies": {
        "marked": "^0.8.2",
        "node-fetch": "^2.6.0"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "babel-loader": "^8.1.0",
        "core-js": "^3.6.5",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^2.0.5",
        "regenerator-runtime": "^0.13.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "prettier",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 9,
            "sourceType": "module",
            "ecmaFeatures": {}
        },
        "env": {
            "node": true,
            "es6": true
        },
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "tabWidth": 4,
                    "printWidth": 120
                }
            ],
            "no-unused-vars": [
                "error",
                {
                    "vars": "all",
                    "args": "none"
                }
            ],
            "semi": [
                "error",
                "always"
            ],
            "curly": "error",
            "eqeqeq": "error",
            "no-eval": "error",
            "no-loop-func": "error",
            "radix": "error",
            "comma-dangle": "error",
            "no-undef": "error"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none"
    }
}
